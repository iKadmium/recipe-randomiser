{
	"name": "recipe-randomiser",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"preinstall": "pnpm dlx only-allow pnpm",
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:ci": "pnpm run test:integration && pnpm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"netlify:dev": "netlify dev",
		"netlify:build": "netlify build",
		"netlify:deploy": "netlify deploy",
		"seed:netlify": "npx tsx scripts/seed-netlify.ts",
		"seed:dev": "netlify dev:exec -- npx tsx scripts/seed-netlify.ts",
		"data:check": "RUNTIME_ENVIRONMENT=node NODE_ENV=development npx tsx scripts/seed-netlify.ts"
	},
	"devDependencies": {
		"@iconify-json/mdi": "^1.2.3",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-netlify": "^5.0.2",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/eslint": "^8.56.7",
		"@types/node": "^22.13.14",
		"dotenv": "^17.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"netlify-cli": "^22.2.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5",
		"svelte-check": "^4",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"unplugin-icons": "^22.1.0",
		"vite": "^6.2.3",
		"vitest": "^3.0.9"
	},
	"type": "module",
	"dependencies": {
		"@netlify/blobs": "^10.0.2",
		"@sveltestrap/sveltestrap": "^7.1.0",
		"date-fns": "^4.1.0"
	},
	"trustedDependencies": [
		"svelte-preprocess"
	]
}